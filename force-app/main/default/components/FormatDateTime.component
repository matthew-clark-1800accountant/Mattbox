<apex:component access="global" controller="FormatDateTimeComponentController">
    {!FormattedDatetime}
    <apex:attribute assignTo="{!date_Time}" description="The DateTime value to be rendered" name="date_time_value" type="DateTime"/>
    <apex:attribute assignTo="{!defined_format}" description="The optional format to use for the DateTime value to be rendered" name="date_time_format" type="String"/>
    <apex:attribute assignTo="{!TZFormat}" description="Optional time Zone formatting string" type="String" name="timeZoneFormat" />
</apex:component>