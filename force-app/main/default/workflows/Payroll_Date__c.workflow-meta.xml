        <fullName>Unprocessed_Payroll</fullName>
        <description>Unprocessed Payroll</description>
        <protected>false</protected>
        <recipients>
            <type>accountOwner</type>
        </recipients>
        <recipients>
            <recipient>chris@1800accountant.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>jesquivias@1800accountant.com</recipient>
            <type>user</type>
        </recipients>
        <recipients>
            <recipient>jmeller@1800accountant.com</recipient>
            <type>user</type>
        </recipients>
        <senderAddress>salesforce@1800accountant.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Payroll/Payroll_Unprocessed</template>
    </alerts>
    <alerts>
        <fullName>X5_days</fullName>
        <description>5 days</description>
        <protected>false</protected>
        <recipients>
            <type>creator</type>
        </recipients>
        <senderAddress>salesforce@1800accountant.com</senderAddress>
        <senderType>OrgWideEmailAddress</senderType>
        <template>Payroll/Payroll_Reminder_Internal</template>
    </alerts>
    <rules>
        <fullName>5 days to Processing</fullName>
        <active>true</active>
        <criteriaItems>
            <field>Payroll_Date__c.Payroll_Process_Date__c</field>
            <operation>equals</operation>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <actions>
                <name>X5_days</name>
                <type>Alert</type>
            </actions>
            <offsetFromField>Payroll_Date__c.Payroll_Process_Date__c</offsetFromField>
            <timeLength>-5</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>UnProcessed Payroll</fullName>
        <actions>
            <name>Unprocessed_Payroll</name>
            <type>Alert</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Payroll_Date__c.Payroll_Process_Date__c</field>
            <operation>equals</operation>
            <value>YESTERDAY</value>
        </criteriaItems>
        <criteriaItems>
            <field>Payroll_Date__c.Processed__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <criteriaItems>
            <field>Payroll_Date__c.payroll_not_needed__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
